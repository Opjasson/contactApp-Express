<h1>ini halaman about</h1>

<% if (typeof errors !== 'undefined') { %>
    <div class="alert alert-danger" role="alert">
        <ul>
            <% errors.forEach(error => { %>        
                <li>
                    <%- error.msg  %>
                </li>
            <% }) %>
            <a href="/contact/add" class="alert-link">Masukan ulang data</a>
        </ul>
    </div>
<% } %>

<form method="POST">
    <div class="mb-3">
        <label for="nama" class="form-label">Nama</label>
        <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required />
    </div>
    <div class="mb-3">
        <label for="noHp" class="form-label">No Hp</label>
        <input
            type="text"
            class="form-control"
            id="noHp"
            name="noHp"
            required />
    </div>
    <button type="submit" class="btn btn-primary">Tambah contact</button>
</form>
